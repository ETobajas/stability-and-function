keywords = {Bombus,Foraging patterns,Heracleum.,Tilia,ectotherms,flies,nectar production,radiation,thermoregulation},
number = {4},
pages = {455--469},
title = {{Thermal constraints on activity patterns in nectar‐feeding insects}},
volume = {8},
year = {1983}
}
