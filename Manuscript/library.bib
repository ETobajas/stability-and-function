keywords = {Agroecology,Ecosystem services,Gossypium hirsutum L.,Landscape ecology,Path analysis},
pages = {33--42},
publisher = {Elsevier B.V.},
title = {{Natural land cover drives pollinator abundance and richness, leading to reductions in pollen limitation in cotton agroecosystems}},
url = {http://dx.doi.org/10.1016/j.agee.2016.04.020},
