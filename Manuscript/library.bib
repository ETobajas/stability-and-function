issn = {1938-2936},
journal = {Environmental entomology},
keywords = {alfalfa leafcutting bee,bee density,effective pollinator of alfalfa,fabricius,hymenoptera,is a very,medicago sativa,medicago sativa l,megachile rotundata,megachilidae,reproductive success,the alfalfa leafcutting bee},
number = {1},
pages = {149--158},
