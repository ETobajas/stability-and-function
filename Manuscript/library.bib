issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Agriculture,Agrochemicals,Boundary,Dispersal,Field margin,Flora,Hedge},
number = {1-2},
pages = {5--21},
title = {{Field margins in northern Europe: Their functions and interactions with agriculture}},
volume = {89},
