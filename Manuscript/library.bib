file = {:C\:/Users/estef/Documents/Papers/Boetzl et al 2018-Agri-evironmental schemes promote gorund dwelling predator in adjacent oilsedd reap fields.pdf:pdf},
issn = {13652664},
journal = {Journal of Applied Ecology},
keywords = {biological pest control,carabid beetles,ecological intensification,ecosystem functions,edge effects,natural enemies,oilseed rape,spillover},
