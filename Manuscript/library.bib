journal = {Annual Review of Ecology, Evolution, and Systematics},
keywords = {Edge effect,Landscape complementation,Landscape configuration,Landscape connectivity,Landscape heterogeneity,Landscape pattern,Landscape structure,Patch area,Patch isolation,SLOSS},
pages = {1--23},
title = {{Ecological Responses to Habitat Fragmentation per Se}},
volume = {48},
year = {2017}
