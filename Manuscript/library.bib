journal = {Biological Journal of the Linnean Society},
keywords = {Avian,Competition,Dependent traits,Feeding,Invertebrates,Mobility,Theft},
number = {4},
pages = {745--762},
title = {{Kleptoparasitic interactions throughout the animal kingdom and a re-evaluation, based on participant mobility, of the conditions promoting the evolution of kleptoparasitism}},
volume = {93},
year = {2008}
