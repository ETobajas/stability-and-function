file = {:C\:/Users/estef/Documents/Papers/Roulston et al 2000 - Whats governs protein content of pollen.pdf:pdf},
issn = {00129615},
journal = {Ecological Monographs},
keywords = {Anemophilous,Pollen protein,Pollen volume,Pollination,Pollinator reward,Style length,Zoophilous},
