keywords = {Agro-ecosystems,Biodiversity,Conservation,Diversity partitioning,Fragmentation,Insects,Landscape ecology},
number = {2},
pages = {340--351},
pmid = {1709},
title = {{How landscape structure, land-use intensity and habitat diversity affect components of total arthropod diversity in agricultural landscapes}},
volume = {44},
