journal = {Ecological Applications},
keywords = {Bee abundance,Bee diversity,Fire,Habitat specialists,Indiana dunes,Land use,Nestedness,Nesting resources,Oak savanna,Oligolectic,Plant richness,Species density},
number = {6},
pages = {1678--1692},
