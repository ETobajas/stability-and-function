issn = {00129658},
journal = {Ecology},
keywords = {Biodiversity,Community assembly,Covariance effect,Diversity-invasibility hypothesis,Diversity-productivity hypothesis,Diversity-stability hypothesis,Ecosystem functioning,Human-dominated ecosystems,Overyielding effect,Portfolio effect,Productivity,Stability},
