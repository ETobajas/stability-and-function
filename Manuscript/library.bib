journal = {Ecology},
keywords = {distribution,generalist,island,patch,specialist,specialist vs generalist food webs,species–area,trophic rank and species–area relationship},
number = {5},
pages = {1495--1504},
title = {{Trophic rank and the species–area relationship}},
