journal = {Ecological Indicators},
keywords = {Bioindicators,Core species,Interaction networks,Key nodes,Olive groves,Organic management,Plant-pollinator interaction,Species composition},
number = {March},
pages = {106422},
publisher = {Elsevier},
title = {{Plant-solitary bee networks have stable cores but variable peripheries under differing agricultural management: Bioindicator nodes unveiled}},
