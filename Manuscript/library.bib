keywords = {Biodiversity conservation,Management,Phosphorus,Soil,Topography,Variation partitioning},
number = {3-4},
pages = {281--288},
title = {{Effects of local factors on plant species richness and composition of Alpine meadows}},
volume = {119},
year = {2007}
}
@article{Hilario2000,
