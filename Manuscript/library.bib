doi = {10.1016/j.agee.2020.107189},
file = {:C\:/Users/estef/Documents/Papers/Raderschall et al 2021-Landscape crop diversity and semi-natural habitat affect crop pollinators, pollination benefir and yield.pdf:pdf},
issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Bumble bee,Ecological intensification,Faba beans,Landscape crop diversity,Pollination,Pollinators,Semi-natural habitat},
