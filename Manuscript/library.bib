file = {:C\:/Users/estef/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Paukkunen, P{\"{o}}yry, Kuussaari - 2018 - Species traits explain long-term population trends of Finnish cuckoo wasps (Hymenoptera Chrysididae.pdf:pdf},
issn = {17524598},
journal = {Insect Conservation and Diversity},
keywords = {Declining trend,distribution,host,host–parasitoid dynamics,kleptoparasite,museum collections,occurrence,parasitoid,sun-exposed dead wood,threatened species,vulnerability of high trophic level},
number = {1},
