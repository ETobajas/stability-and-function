journal = {Agriculture, Ecosystems and Environment},
keywords = {Agri-environment schemes,Biodiversity,Ecosystem services,Floral resources,Landscape diversity,Pollination},
number = {May},
pages = {157--167},
publisher = {Elsevier},
title = {{Exploring the interactions between resource availability and the utilisation of semi-natural habitats by insect pollinators in an intensive agricultural landscape}},
url = {http://dx.doi.org/10.1016/j.agee.2017.05.007},
