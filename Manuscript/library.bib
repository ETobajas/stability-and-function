issn = {10916490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Foraging behavior,Nutritional ecology,Pollen,Pollinator,Preferences},
number = {28},
pages = {E4035--E4042},
pmid = {27357683},
title = {{Macronutrient ratios in pollen shape bumble bee (Bombus impatiens) foraging strategies and floral preferences}},
