doi = {10.1146/annurev.ecolsys.39.110707.173349},
file = {:C\:/Users/estef/Desktop/estancia_EBD/Papers/Funcion y estabilidad/Gonzalez-Lorea 2009-The causes and consequences of compensatory dynamics in ecological communities.pdf:pdf},
issn = {1543592X},
journal = {Annual Review of Ecology, Evolution, and Systematics},
keywords = {Environmental change,Species tolerance,Stability,Synchrony},
pages = {393--414},
title = {{The causes and consequences of compensatory dynamics in ecological communities}},
volume = {40},
year = {2009}
}
