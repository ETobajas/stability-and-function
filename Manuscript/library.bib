keywords = {Hillside aspect,Organic farming,Parasitoids,Pollinators,Predators,Traditional orchards},
number = {March},
pages = {106920},
publisher = {Elsevier},
title = {{Natural enemies and pollinators in traditional cherry orchards: Functionally important taxa respond differently to farming system}},
url = {https://doi.org/10.1016/j.agee.2020.106920},
