isbn = {0006-3207},
issn = {00063207},
journal = {Biological Conservation},
keywords = {Anthropogenic disturbance,Bees,Functional traits,Landscape change,Life-history response guilds},
number = {10},
pages = {2280--2291},
publisher = {Elsevier Ltd},
title = {{Ecological and life-history traits predict bee species responses to environmental disturbances}},
