doi = {10.1111/oik.01268},
file = {:C\:/Users/estef/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/L{\'{a}}zaro, Lundgren, Totland - 2014 - Experimental reduction of pollinator visitation modifies plant-plant interactions for pollination.pdf:pdf},
