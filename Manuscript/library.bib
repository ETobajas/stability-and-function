keywords = {Agriculture,Bombus,Floral resources,Landscape structure,Mass flowering crop,Oilseed rape,Pollinator},
pages = {201--209},
publisher = {Elsevier B.V.},
title = {{Seasonal persistence of bumblebee populations is affected by landscape context}},
