keywords = {Habitat,Habitat selection,Resource selection,Resource selection function,Scale,Species–environment relationships,Wildlife habitat relationships},
number = {6},
pages = {1161--1175},
publisher = {Springer Netherlands},
title = {{Multi-scale habitat selection modeling: a review and outlook}},
volume = {31},
year = {2016}
}
@article{Marini2007,
