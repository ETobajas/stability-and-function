journal = {Biological Conservation},
keywords = {Agri-environment schemes,Bumblebees,Forbs,Grassland enhancement,Legumes,Pollination},
pages = {44--51},
publisher = {Elsevier Ltd},
title = {{Enhancing floral resources for pollinators in productive agricultural grasslands}},
