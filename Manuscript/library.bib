file = {:C\:/Users/estef/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Gunton, P{\"{o}}yry - 2016 - Scale-specific spatial density dependence in parasitoids a multi-factor meta-analysis.pdf:pdf},
issn = {13652435},
journal = {Functional Ecology},
keywords = {aggregation,compensatory,depensatory,extent,functional traits,grain size,insect parasitism,invasive species,resolution,spatial pattern},
number = {9},
pages = {1501--1510},
title = {{Scale-specific spatial density dependence in parasitoids: a multi-factor meta-analysis}},
