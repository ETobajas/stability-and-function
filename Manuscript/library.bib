issn = {20457758},
journal = {Ecology and Evolution},
keywords = {agri-environment schemes,pollen transport networks,solitary bees,wildflower seed mixtures},
number = {15},
pages = {7574--7587},
title = {{Flower preferences and pollen transport networks for cavity-nesting solitary bees: Implications for the design of agri-environment schemes}},
