file = {:C\:/Users/estef/Documents/Papers/Mallinger2016_Article_DiverseLandscapesHaveAHigherAb.pdf:pdf},
issn = {15729761},
journal = {Landscape Ecology},
keywords = {Apples,Habitat fragmentation,Land-use change,Landscape structure,Native bee,Pollinator},
number = {7},
pages = {1523--1535},
publisher = {Springer Netherlands},
title = {{Diverse landscapes have a higher abundance and species richness of spring wild bees by providing complementary floral resources over bees' foraging periods}},
