isbn = {0167-8809},
issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Agricultural land use intensity,Agricultural landscapes,Agrotolerant species,Boundary width,Nature-value species,Plant diversity},
number = {3},
pages = {178--186},
title = {{Quantifying the effect of organic farming, field boundary type and landscape structure on the vegetation of field boundaries}},
