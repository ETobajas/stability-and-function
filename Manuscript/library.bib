issn = {00063207},
journal = {Biological Conservation},
keywords = {Agriculture,Aquatic insects,Ecosystem services,Extinction,Global change ecology,Pesticides,Pollinators},
number = {January},
pages = {8--27},
title = {{Worldwide decline of the entomofauna: A review of its drivers}},
volume = {232},
year = {2019}
}
