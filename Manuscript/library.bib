issn = {00218901},
journal = {Journal of Applied Ecology},
keywords = {Agroecosystems,Bombus terrestris,Bumblebee conservation,Ecosystem services,Forage plants,Landscape-scale study,Mass flowering crops,Pollination,Reproductive success},
